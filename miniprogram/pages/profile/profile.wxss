/* miniprogram/pages/profile/profile.wxss */
page{
  background-color: #f1f1f1;
}
.profile-header{
  height: 480rpx;
  background-color: #d43c43;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, .3);
}
.avatar-url{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border: 6rpx solid #fff;
  border-radius: 50%;
}
.nav{
  margin: 40rpx 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.nav-item{
  padding: 20rpx;
  display: flex;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}
.nav-url{
  width: 100%;
}
.nav-item text{
  margin-left: 20rpx;
  color: #666;
}