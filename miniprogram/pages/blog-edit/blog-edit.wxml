<!-- miniprogram/pages/blog-edit/blog-edit.wxml -->
<view class="container">
  <textarea class="content" placeholder="分享新鲜事..." maxlength="140" auto-focus bindinput="onInput" bindfocus="onFocus" bindblur="onBlur"></textarea>
  <view class="image-list">
    <block wx:for="{{images}}" wx:key="*this">
      <view class="image-wrap">
        <image class="image" src="{{item}}" mode="aspectFill" bind:tap="onPreviewImage" data-imgurl="{{item}}" />
        <i class="iconfont icon-shanchu" bind:tap="onDelete" data-index="{{index}}"></i>
      </view>
    </block>
    <view hidden="{{images.length==9}}" class="image-wrap selectphoto" bind:tap="onChooseImage">
      <i class="iconfont icon-jiahao" />
    </view>
  </view>
</view>
<view class="footer" style="bottom:{{footerBottom}}px">
  <text class="words-num">{{wordsNum}}</text>
  <button size="mini" class="send-btn" bind:tap="onSubmit">发布</button>
</view>