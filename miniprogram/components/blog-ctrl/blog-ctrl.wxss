/* components/blog-ctrl/blog-ctrl.wxss */
.ctrl{
  display: flex;
  align-items: center;
  background-color: #fff;
  height: 100%;
}
.ctrl-item{
  flex: 1;
  text-align: center;
  color: rgba(40, 47, 60, .8);
  font-size: 26rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.ctrl-item .icon{
  margin-right: 12rpx;
  font-size: 32rpx;
}
.comment-content{
  text-align: left;
  padding: 20rpx;
}
.send{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: #d43c33;
  color: #fff;
  margin-left: 20rpx;
  font-size: 18rpx;
}
.share-btn{
  padding: 0;
  height: 100%;
  font-size: 28rpx;
  font-weight: 400;
  border: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: rgba(40, 47, 60, .8);
  background-color: #fff;
}