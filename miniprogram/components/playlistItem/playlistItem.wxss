/* components/playlistItem/playlistItem.wxss */
.playlist-container{
  width: 220rpx;
  position: relative;
  padding-bottom: 20rpx;
}
.playlist-img{
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
  background-color: #ccc;
}
.playlist-playcount{
  position: absolute;
  top: 4rpx;
  right: 10rpx;
  padding-left: 26rpx;
  background: url(data:image/png;base64,);
  background-size: 24rpx;
  background-repeat:no-repeat;
  font-size: 24rpx;
  color: #fff;
  text-shadow: 1px 0 0 rgba(0,0,0,.3);
}
.playlist-name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  line-height: 1.2;
  padding:2px 0 0 6px;
}