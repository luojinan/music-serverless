/* components/musiclist/musiclist.wxss */
.xmusiclist-wrapper{
  display: flex;
  align-items: center;
  padding: 14rpx 20rpx;
}

.xmusiclist-index{
  width: 80rpx;
  /* flex: 0 0 80rpx; */
  font-size: 34rpx;
  color: #888;
}

.xmusiclist-info{
  /* flex: 1; */
  /* width: 100%; */
  width: 0;
  flex-grow: 1;
}
.xmusiclist-info_name{
  font-size: 34rpx;
  color: #333;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.xmusiclist-info_alia{
  color: #999;
}
.xmusiclist-info_desc{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.playing view, .playing text{
  color: #d43c43;
}